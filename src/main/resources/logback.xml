<configuration debug="true" scan="true" scanPeriod="30 seconds">

	<!-- 控制台输出 -->
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>[%-5level]-%d [%thread] %logger{36} -[%L]-[%M] - %msg%n
			</pattern>
		</encoder>
	</appender>

	<!-- 文件输出 -->
	<appender name="FILE" class="ch.qos.logback.core.FileAppender">
		<file>/var/log/atm/atm.log</file>
		<append>true</append>
		<immediateFlush>true</immediateFlush>
		<encoder>
			<pattern>[%-5level]-%d [%thread]  %logger{36} -[%L]-[%M] - %msg%n
			</pattern>
		</encoder>
	</appender>
	<!-- 滚动文件输出 -->

	<appender name="ROLLING"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		
		<prudent>true</prudent>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>/var/log/atm/logFile.%d{yyyy-MM-dd}.log
			</fileNamePattern>
			<maxFileSize>100MB</maxFileSize>
			<maxHistory>10</maxHistory>
			<totalSizeCap>2GB</totalSizeCap>
		</rollingPolicy>

		<encoder>
			<pattern>[%-5level]-%d [%thread] %logger{36} -[line : %L]-[%M] - %msg%n
			</pattern>
		</encoder>
	</appender>

	<!-- 异步的缓冲输入，利用BlockingQueue -->
	<appender name="ASYNC" class="ch.qos.logback.classic.AsyncAppender">
		<appender-ref ref="ROLLING" />
		<ddiscardingThreshold>0</ddiscardingThreshold>
	</appender>

	<!-- log节点 -->
	<logger name="com.dayuanit.atm" level="info" additivity="false">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="ASYNC" />
	</logger>

	<logger name="top.robotman.atm" level="info" additivity="false">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="ASYNC" />
	</logger>

	<!-- root节点 -->
	<root level="info">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="ASYNC" />
	</root>
</configuration>